<Window x:Class="WPFAppQuiz3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAppQuiz3"
        mc:Ignorable="d"
        Title="Quiz 3" Height="400" Width="600">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

             <Button x:Name="btnTask1" Content="Task1" Click="btnTask1_Click" Grid.Row="0" Width="100" Height="50" FontWeight="Bold" Background="Aquamarine" Foreground="DarkRed" Margin="10"></Button>
            <Button x:Name="btnTask2" Content="Task2" Click="btnTask2_Click" Grid.Row="1" Width="100" Height="50" FontWeight="Bold" Background="Aquamarine" Foreground="DarkRed" Margin="10"></Button>
            <Button x:Name="btnTask3" Content="Task3" Click="btnTask3_Click" Grid.Row="2" Width="100" Height="50" FontWeight="Bold" Background="Aquamarine" Foreground="DarkRed" Margin="10"></Button>
        </Grid>
    </StackPanel>
</Window>
